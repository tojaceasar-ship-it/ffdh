{
  "name": "ffdh-next",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=20.11"
  },
  "scripts": {
    "build": "turbo run build --cache-dir=.turbo",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "qa:smoke": "turbo run qa:smoke",
    "qa:lh": "turbo run qa:lh",
    "ci:only-changed": "node scripts/only-changed.js",
    "plan": "npx tsx bots/orchestrator/src/cli.ts plan",
    "start:orch": "npx tsx bots/orchestrator/src/cli.ts start",
    "smart-build": "npx tsx bots/orchestrator/src/cli.ts smart-build",
    "smart-review": "npx tsx bots/orchestrator/src/cli.ts smart-review",
    "smart-deploy": "npx tsx bots/orchestrator/src/cli.ts smart-deploy",
    "start": "next dev -p 3000",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:ci": "vitest run --coverage && playwright test",
    "lhci": "lhci autorun",
    "lhci:desktop": "lhci autorun --config=lighthouserc.js",
    "a11y": "pa11y-ci",
    "a11y:ci": "pa11y-ci --config .pa11yci.json",
    "build:analyze": "ANALYZE=true next build",
    "preview": "next build && next start",
    "sanity:dev": "cd sanity && npm run dev",
    "seed": "ts-node scripts/seed-sanity.ts",
    "import:scenes": "node scripts/import-scenes.mjs",
    "import:products": "node scripts/import-products.mjs",
    "check-env": "node scripts/check-env.mjs",
    "db-verify": "node scripts/db-verify.mjs",
    "health": "curl http://localhost:3000/api/health",
    "prebuild": "node scripts/check-env.mjs",
    "scan-secrets": "node scripts/scan-secrets.mjs",
    "vercel-env": "node scripts/prepare-vercel-env.mjs"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.0",
    "@next-auth/supabase-adapter": "^0.2.1",
    "@reduxjs/toolkit": "^1.9.0",
    "@sanity/client": "^7.12.1",
    "@sanity/icons": "^3.7.4",
    "@sanity/image-url": "1",
    "@sanity/vision": "^4.14.1",
    "@stripe/stripe-js": "^3.0.0",
    "@supabase/supabase-js": "^2.78.0",
    "@tanstack/react-query": "^5.0.0",
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "framer-motion": "^11.0.0",
    "html5-qrcode": "^2.3.8",
    "lucide-react": "^0.552.0",
    "next": "^15.0.0",
    "next-auth": "^4.24.0",
    "next-sanity": "11.6.5",
    "openai": "^4.0.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-helmet": "^6.1.0",
    "react-hook-form": "^7.50.0",
    "react-redux": "^8.1.0",
    "sanit": "^1.0.0",
    "sanity": "4.14.1",
    "simplex-noise": "^4.0.3",
    "stripe": "^19.2.0",
    "styled-components": "6.1",
    "tailwindcss": "^3.4.0",
    "zod": "^3.22.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@babel/runtime": "^7.28.4",
    "@codemirror/lint": "^6.9.1",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.40.0",
    "@sentry/nextjs": "^8.0.0",
    "@tailwindcss/forms": "^0.5.7",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.16",
    "codemirror": "^6.0.2",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.54.0",
    "eslint-config-next": "^15.0.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^23.0.0",
    "lighthouse": "^11.0.0",
    "pa11y-ci": "^3.1.0",
    "pa11y-ci-reporter-html": "^4.0.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "react-is": "^19.2.0",
    "ts-node": "^10.9.0",
    "turbo": "^2.6.0",
    "typescript": "^5.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.0.0"
  }
}
