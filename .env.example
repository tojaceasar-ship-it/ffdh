# FFDH Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# For production, set these in Vercel dashboard

# ============================================================================
# APP CONFIGURATION
# ============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=FFDH

# ============================================================================
# SANITY CMS CONFIGURATION
# ============================================================================
# Get these from https://sanity.io/manage
NEXT_PUBLIC_SANITY_PROJECT_ID=your_sanity_project_id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_AUTH_TOKEN=your_sanity_auth_token

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
# Get these from https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================================================
# STRIPE CONFIGURATION
# ============================================================================
# Get these from https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_or_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_or_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ============================================================================
# PRINTFUL CONFIGURATION (Optional - for print-on-demand)
# ============================================================================
# Get these from https://www.printful.com/dashboard/store
PRINTFUL_API_KEY=your_printful_api_key
PRINTFUL_STORE_ID=your_printful_store_id
PRINTFUL_WEBHOOK_SECRET=your_printful_webhook_secret

# ============================================================================
# OPENAI CONFIGURATION (Optional - for AI features)
# ============================================================================
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key

# ============================================================================
# ANALYTICS CONFIGURATION (Optional)
# ============================================================================
# Google Analytics (legacy)
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Google Analytics 4
VITE_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Plausible Analytics
VITE_PLAUSIBLE_DOMAIN=yourdomain.com

# ============================================================================
# PAYPAL CONFIGURATION (Optional - for PayPal payments)
# ============================================================================
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id
VITE_PAYPAL_SECRET=your_paypal_secret

# ============================================================================
# FEATURE FLAGS (Optional)
# ============================================================================
NEXT_PUBLIC_SCENE_MAP_ENABLED=true
NEXT_PUBLIC_QR_SCANNER_ENABLED=true
NEXT_PUBLIC_EMOTION_BUBBLES_ENABLED=true
