{
  "name": "ffdh-bot-army",
  "version": "1.0.0",
  "description": "FFDH Bot Army - Automated project completion system",
  "private": true,
  "workspaces": [
    "knowledge-base",
    "orchestrator",
    "code-bot",
    "config-bot",
    "content-bot",
    "test-bot",
    "deploy-bot",
    "dashboard",
    "shared"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "validate-kb": "cd knowledge-base && npx tsx src/knowledge-validator.ts",
    "extract-knowledge": "node scripts/extract-knowledge.mjs",
    "test-kb": "cd knowledge-base && npx tsx test-loader.ts"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "zod": "^3.22.0"
  },
  "engines": {
    "node": ">=20.11"
  }
}

