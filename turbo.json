{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "qa:smoke": {
      "dependsOn": ["build"],
      "outputs": [".reports/smoke/**"]
    },
    "qa:lh": {
      "dependsOn": ["build"],
      "outputs": [".reports/lh/**"]
    }
  }
}

